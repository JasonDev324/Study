<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".knowledge.audio.AudioRecordActivity">

    <data>

        <variable
            name="model"
            type="io.tanjundang.study.knowledge.audio.AudioModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnRecord" />

        <io.tanjundang.study.common.view.AudioRecordButton
            android:id="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/str_audio_btn_normal" />
    </RelativeLayout>
</layout>