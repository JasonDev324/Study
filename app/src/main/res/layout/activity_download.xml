<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".knowledge.download.DownloadActivity">

    <Button
        android:id="@+id/btnDownloadManager"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="start_download"
        android:text="DownloadManager开始下载"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="file_download"
        android:text="FileDownload"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDownloadManager" />

</android.support.constraint.ConstraintLayout>