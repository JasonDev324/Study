<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_one"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.tanjundang.study.knowledge.selector.SelectorActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_study_radiobutton_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="ONE"
            android:textColor="@color/common_text_color_selector" />

        <RadioButton
            android:id="@+id/rbTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_study_radiobutton_selector"
            android:button="@null"
            android:gravity="center"
            android:text="TWO"
            android:textColor="@color/common_text_color_selector" />

    </RadioGroup>

</RelativeLayout>
