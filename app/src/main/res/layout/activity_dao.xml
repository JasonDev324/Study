<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".knowledge.greendao.DaoActivity">

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="插入数据"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/loadData"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/chart_course_text_color"
        android:text="加载数据"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnInsert" />

    <Button
        android:id="@+id/btnDelByKey"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/status_bar_color"
        android:text="通过key删除数据"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/loadData" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/right_green"
        android:text="删除所有数据"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnDelByKey" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparent"
        android:minHeight="300dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDel" />

</android.support.constraint.ConstraintLayout>